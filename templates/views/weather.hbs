<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    
    {{>navbar}}

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form class="temp_form">
                       <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                       <input type="submit" value="search" id="submitBtn">

                   </form>
                   <div class="tempInformation">
                       <div class="top_layer">
                           <p id="day">wednesday</p>
                           <p id="today_date">23feb</p>

                       </div>
                       <div class="main_layer">
                           <p id="city_name">Getout put here</p>
                           <div class="middle_layer data_hide">
                               <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                               <p class="temp_status"><i class="fa fa-sun" aria-hidden="true"></i></p>

                           </div>
                       </div>

                   </div>

               </div>
            </div>
        </div>
    </div>
   {{>footer}}
   <script src="js/main.js"></script>
   <script>
       const getCurDay=()=>{
            var weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let curTime=new Date();
            console.log(curTime)
            days=weekday[curTime.getDay()];
            let day=document.getElementById("day");

            day.innerText=days;  

        };
        const getCurTime=()=>{
            var months=[
             "Jan",
             "Feb",
             "Mar",
             "Apr",
             "May",
             "Jun",
             "Jul",
             "Aug",
             "Sep",
             "Oct",
             "Nov",
             "Dec",]
            var now=new Date();
            var month=months[now.getMonth()];
            var date=now.getDate();
             let today_date=document.getElementById("today_date");

            today_date.innerText=`${date} ${month}`; 
          }
        
        getCurDay();
        getCurTime();
        
   </script>
    
</body>
</html>